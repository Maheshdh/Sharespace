<h1>Edit Profile</h1>
<hr>

<div class=" profileUpdate-form">
<form action="/profile/update" method="POST" id="profile_update_form" enctype="multipart/form-data">
<label for="firstname_update">Firstname<br><input type="text" id="firstname_update" name="firstname_update" value={{user.firstName}}></label>
<br><br>
<label for="lastname_update">Lastname<br><input type="text" id="lastname_update" name="lastname_update" value={{user.lastName}}></label>
<br><br>
<label for="phoneno_update">Phone no:<br><input type="text" id="phoneno_update" name="phoneno_update" value={{user.phoneNumber}}></label>
<br><br>
<label for="existing_image">
    Existing image:</label>
{{#if user.image}}
<img src="http://localhost:3000/data/uploads/{{user.image}}" alt="Existing image" id="existing_image">
{{/if}}
<label for='updateProfilePic'> Select a file: </label>
<br>
<input type='file' name="updateProfilePic" id='updateProfilePic' accept="image/*">
<br><br>
<div id="error" class="error-div hidden">
          {{#if error}}
              <p>{{error}}</p>
          {{/if}}
</div>
<div>
    <p id="error_js"></p>
</div>
<br><br>
<input type="submit" class="submit-button">
<br><br>

</form>
</div>
<hr>