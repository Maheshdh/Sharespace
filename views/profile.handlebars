<h1>Profile Page</h1>
<hr>
<br>

<h2>Your Information:</h2>
<div>
<div id="userInformationTableDiv">
<table id="userInformationTable">
  <tr>
    <td>Name</td>
    <td>{{user.firstName}} {{user.lastName}}</td>
  </tr>
  <tr>
    <td>Email Address</td>
    <td>{{user.emailAddress}}</td>
  </tr>
  <tr>
    <td>Phone Number</td>
    <td>{{user.phoneNumber}}</td>
  </tr>
</table>
</div>

<div>
{{#if user.image}}
<img src="http://localhost:3000/data/uploads/{{user.image}}" alt="Profile Page">
{{/if}}
</div>
</div>
<br><br>

<button style="font-size:24px" onclick="window.location.href='/profile/update';">Edit Profile <i class="fa fa-edit"></i></button>

<h2>Reviews on your listings:</h2>
<p>Cumulative Rating: {{user.rating}} from {{reviews.length}} reviews</p>
</div>
<div>
  <ol>
  {{#each reviews}}
    <li>Rating: {{this.rating}}<br>Comment: {{this.comment}}<br>Reviewed By: <a href = "/users/{{this.userID}}">Link to user</a></p>
    </li>
  {{/each}}
</ol>
